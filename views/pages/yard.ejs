<!DOCTYPE html>
<html>
<head>
    <% include ../templates/basic-meta-tags %>

    <title>Welcome to seeds :)</title>

    <% include ../templates/head-bootstrap %>
    <% include ../templates/all-header-assets %>
    <script src="scripts/yards.js"></script>
</head>
<body>

<% include ../templates/navbar %>

<div class="container">

    <div id="welcome-message" class="row" style="text-align: center;">
        <div class="col-xs-12">
            <h1>yard <span id="yard-id"><%= currentyard %></span></h1>
        </div>
    </div>

    <div class="row">
        <% yards.forEach(function(yard) { %>
        <div class="col-xs-3">
          <div class="thumbnail">
            <!--<img src="..." alt="...">-->
            <div class="caption">
                <h3><%= yard.syumonth %>  <%= yard.syuyear %></h3>
               
                <p>Income: <span><%= yard.syuincome %></span></p>
                <p>Investment: <span><%= yard.syuinvestment %></span></p>
                <p>
                   
                   
                </p>
                <p><a href="#" class="btn btn-primary history" role="button">Go to details</a></p>
            </div>
        </div>
        </div>
        <% }); %>
    </div>
    <div class="row">
        <h3>Agregar Yard</h3>
        <form>
            <div class="form-group">
              <label for="new-month">Mes</label>
              <input type="text" class="form-control" id="new-month" >
            </div>
            <div class="form-group">
                <label for="new-year">AÃ±o</label>
                <input type="number" class="form-control" id="new-year" >
              </div>
              <div class="form-group">
                <label for="new-production">Produccion</label>
                <input type="number" class="form-control" id="new-production" >
              </div>
              <div class="form-group">
                <label for="new-measure">Unidad</label>
                <input type="text" class="form-control" id="new-measure" placeholder="kg, lb">
              </div>
              <div class="form-group">
                <label for="new-income">Ganancia</label>
                <input type="number" class="form-control" id="new-income" >
              </div>
              <div class="form-group">
                <label for="new-investment">Inversion</label>
                <input type="number" class="form-control" id="new-investment" >
              </div>
              <div class="form-group">
                <label for="new-currency">Moneda</label>
                <input type="text" class="form-control" id="new-currency" placeholder="MXN, USD">
              </div>
           
            
           
            <button id="add-new-info" class="btn btn-default">Submit</button>
          </form>
    </div>
</div>



</body>
</html>